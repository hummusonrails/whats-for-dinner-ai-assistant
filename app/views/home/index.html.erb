<div class="min-h-screen flex flex-col bg-gradient-to-r from-green-200 to-blue-200">
  <main class="flex-grow flex items-center justify-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="flex flex-col lg:flex-row items-center">
        <div class="lg:w-1/2 text-center lg:text-left mb-12 lg:mb-0">
          <h1 class="text-4xl font-bold text-gray-900">The What's For Dinner AI Assistant</h1>
          <p class="mt-4 text-lg text-gray-700">Find recipes based on the contents of your fridge.</p>
          <div class="mt-8">
            <%= form_with(model: @recipe, url: recipes_path, html: { class: 'mt-8' }, local: true) do |form| %>
              <div class="mb-4">
                <%= form.label :image, class: "block text-sm font-medium text-gray-700" %>
                <%= form.file_field :image, class: "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
              </div>
              <div>
                <%= form.submit "Upload Fridge Image", class: "inline-flex items-center px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 shadow-sm" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="lg:w-1/2 flex justify-center lg:justify-end">
          <img src="/home_image.webp" alt="AI Assistant" class="w-full h-auto rounded-lg shadow-lg">
        </div>
      </div>
    </div>
  </main>
</div>
